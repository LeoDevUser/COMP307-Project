
<title>Real-time Search Bar</title>
<link rel="stylesheet" href="../css/booking.css">
<link rel="stylesheet" href="../css/public.css">
<script src="../js/searchbar.js"></script>
<link rel="stylesheet" href="../css/dash.css">


<%- include('template.ejs'); %>

<div class="hide_for_small_screen">

        <div class="full_element"></div>

        <div>
        <h1>RSVP For an Office Hour</h1>
        </div>
</div>


<div class="booking_layout">


    <!-- Search bar section -->

    <div class="full_element">


        <p>Search for a class or Professor</p>

        <div class="search-container">
            <input type="text" id="search" class="search-bar" placeholder="Search..." oninput="filterSuggestions()">
            <div id="suggestions" class="suggestions" style="display: none;"></div>
        </div>

        <p>XYZ Professor's classes</p>

        
            <ul class="styled-radio">
                <li><input type="radio" name="options" id="option1"> Option 1</li>
                <li><input type="radio" name="options" id="option2"> Option 2</li>
                <li><input type="radio" name="options" id="option3"> Option 3</li>
                <li><input type="radio" name="options" id="option4"> Option 4</li>
            </ul>
        
        <button class="button_class">
            Reset
        </button>


        <p>Need to Request a specific time?</p>
        
        <button class="button_class">
            Request a Time
        </button>
        
    </div>

    <!-- calendar section -->
    <div class="cal_class_booking">

        <div class="calendar-container">
            <%- include('calendar.ejs'); %>
        </div> 

    </div>   

</div>


<div class="hide_for_small_screen">

    <div class="full_element"></div>

    <div class="rsvp_booking">
        <h3>Confirm RSVP time: <span id="time_selected">12:00-13:00 Mon 15th</span> 
            <button class="button_class">Confirm</button></h3>
    </div>
    
</div>

