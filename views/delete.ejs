<style>
    p {
      font-size: 25px;
      text-align: center;
    }

    u {
      text-decoration: none;
      border-bottom: 2px solid black;
    }

    .bottom-container {
      display:flex;
      justify-content: center;
      align-items: center;
      margin-top: 50px;
      text-align:center;

    }

    .formApperance p{
      font-size: 18px;

    }

    .formApperance h1{
      font-weight: normal;
